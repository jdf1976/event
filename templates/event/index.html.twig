{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
    {% for message in app.flashes('Erfolg') %}
        <div class="allert alert-success">
            <h3>{{ message }}</h3>
        </div>
    {% endfor %}
    <br>
    <div class="container">
        <h2>Events bearbeiten</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>
                        Nr
                    </td>
                    <td>
                        Titel
                    </td>
                    <td>
                        Beschreibung
                    </td>
                    <td>
                        Kategorie
                    </td>
                    <td>
                        Datum
                    </td>
                    <td>
                        Bild
                    </td>
                    <td>
                        Löschen
                    </td>
                    <td>
                        <a href="{{ path('event.anlegen') }}">Anlegen</a>
                    </td>
                </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>
                        {{ event.id }}
                    </td>
                    <td>
                        <a href="{{ path('event.anzeigen',{id: event.id}) }}">{{ event.name}}</a>
                    </td>
                    <td>
                        {{ event.beschreibung }}
                    </td>
                    <td>
                        {{ event.kategorie }}
                    </td>
                    <td>
                        {{ event.datum }}
                    </td>
                    <td>
                        {{ event.bild }}
                    </td>
                    <td class="align-content-center">
                        <a href="{{ path('event.entfernen',{id: event.id}) }}">Löschen</a>
                    </td>
                    <td>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
