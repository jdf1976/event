{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <div class="container">
        <h1>Event</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Beschreibung</th>
                <td>{{ event.beschreibung }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{{ event.datum }}</td>
            </tr>
            <tr>
                <th>Bild</th>
                <td>{{ event.bild }}</td>
            </tr>
            <tr>
                <th>Anzahl</th>
                <td>{{ event.anzahl }}</td>
            </tr>
            <tr>
                <th>Hinweis</th>
                <td>{{ event.hinweis }}</td>
            </tr>
            <tr>
                <th>Referent</th>
                <td>{{ event.ref }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary btn-block" href="{{ path('app_event_crud_index') }}">back to list</a>

        <a class="btn btn-secondary btn-block" href="{{ path('app_event_crud_edit', {'id': event.id}) }}">edit</a>

        {{ include('event_crud/_delete_form.html.twig') }}
    </div>
{% endblock %}
