{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <h1>Booking index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>BeginAt</th>
                <th>Description</th>
                <th>MaxParticipant</th>
                <th>MinParticipant</th>
                <th>CurrentParticipant</th>
                <th>Speaker</th>
                <th>IsActive</th>
                <th>Picture</th>
                <th>Notice</th>
                <th>Code</th>
                <th>Category_id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for booking in bookings %}
            <tr>
                <td>{{ booking.id }}</td>
                <td>{{ booking.title }}</td>
                <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ booking.description }}</td>
                <td>{{ booking.maxParticipant }}</td>
                <td>{{ booking.minParticipant }}</td>
                <td>{{ booking.currentParticipant }}</td>
                <td>{{ booking.speaker }}</td>
                <td>{{ booking.isActive }}</td>
                <td>{{ booking.picture }}</td>
                <td>{{ booking.notice }}</td>
                <td>{{ booking.code }}</td>
                <td>{{ booking.categoryId }}</td>
                <td>
                    <a href="{{ path('app_booking_show', {'id': booking.id}) }}">show</a>
                    <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_booking_new') }}">Create new</a>
{% endblock %}
